<Page x:Class="Runge_Kutta.Pages.Runge_Kutta"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Runge_Kutta.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Runge_Kutta">

    <Grid>
        <StackPanel Grid.Row="1" Orientation="Vertical" HorizontalAlignment="Center" MinWidth="400">
            <TextBlock Text="Уравнение вида y'=f(x,y):" TextAlignment="Center"/>
            <TextBox x:Name="MainTextBox"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="X от "/>
                <TextBox x:Name="StartX" MinWidth="25"/>
                <TextBlock Text=" до "/>
                <TextBox x:Name="EndX" MinWidth="25"/>
                <TextBlock Text=" Шаг: "/>
                <TextBox x:Name="H" MinWidth="25"/>
            </StackPanel>
            <TextBlock Text="Начальный Y:" TextAlignment="Center"/>
            <TextBox x:Name="StartY"/>
            <Button x:Name="bDraw" Content="Рассчитать" Click="bDraw_Click"/>
        </StackPanel>
    </Grid>
</Page>
